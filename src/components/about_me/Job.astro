---
const {title, startDate, description, isCurrent, company} = Astro.props;
---

<li class='mb-10 ml-6 last:mb-0'>
  <span
    class='absolute flex items-center justify-center w-6 h-6 bg-blue-200 rounded-full -left-3 ring-8 ring-white dark:ring-gray-900 dark:bg-blue-900'
  >
    <svg
      aria-hidden='true'
      class='w-3 h-3 text-blue-600 dark:text-blue-400'
      fill='currentColor'
      viewBox='0 0 20 20'
      xmlns='http://www.w3.org/2000/svg'
      ><path
        fill-rule='evenodd'
        d='M6 2a1 1 0 0 0-1 1v1H4a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2h-1V3a1 1 0 1 0-2 0v1H7V3a1 1 0 0 0-1-1zm0 5a1 1 0 0 0 0 2h8a1 1 0 1 0 0-2H6z'
        clip-rule='evenodd'></path></svg
    >
  </span>
  <div class='flex justify-between items-start'>
    <header>
      <h3 class='flex items-center mb-1 text-lg font-semibold text-gray-900 dark:text-slate-200'>
        {title}
        {
          isCurrent && (
            <span class='bg-blue-100 text-blue-800 text-sm font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800 ml-3'>
              Current
            </span>
          )
        }
      </h3>
      <time class='block mb-2 text-sm font-normal leading-none text-gray-400 dark:text-gray-500'
        >Started on {startDate}</time
      >
    </header>
    <a
      href={company?.link}
      class='transition inline-flex items-center text-base font-semibold text-gray-900 hover:text-blue-700 focus:z-10 focus:outline-none focus:text-blue-700 dark:bg-gray-800 dark:text-gray-400'
      >{company?.name}</a
    >
  </div>
  <p class='mb-4 text-base font-normal text-gray-500 dark:text-gray-400'>{description}</p>
</li>
